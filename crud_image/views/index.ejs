<!DOCTYPE html>
<html>

<head>
  <title>Students</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <h1>List of Students</h1>
  <center>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Year</th>
          <th>Course</th>
          <th>Profile Picture</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student=> { %>
          <tr>
            <td>
              <%= student.name %>
            </td>
            <td>
              <%= student.year %>
            </td>
            <td>
              <%= student.course %>
            </td>
            <td>
              <center><img src="/uploads/<%= student.profile_pic %>"></center>
            </td>
            <td>
              <a href="/update/<%= student.id %>">Edit</a>
              <a href="/delete/<%= student.id %>"
                onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
            </td>
          </tr>
          <% }); %>

      </tbody>
    </table>
    <a href="/add" style="margin-top: 55px; width: 300px; background-color: #06d6a0;">Add Student</a>
  </center>
</body>

</html>